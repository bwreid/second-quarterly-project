.row
  .large-3.columns.large-centered
    %h1 Login
    - if flash[:notice]
      .alert-box.alert= flash[:notice]
    = form_tag '/login' do
      = label_tag 'Username'
      = text_field_tag 'username'
      = label_tag 'Password'
      = password_field_tag 'password'
      = submit_tag "Login", :class => 'button secondary'